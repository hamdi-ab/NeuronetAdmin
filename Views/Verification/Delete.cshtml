@model NeuronetAdmin.Models.VerificationRecord

@{
    ViewData["Title"] = "Delete Verification Request";
}

<h1>Delete Verification Request</h1>

<h3>Are you sure you want to delete this record?</h3>
<div>
    <h4>Verification Record</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-3">Counselor Name</dt>
        <dd class = "col-sm-9">@Model.CounselorName</dd>
        
        <dt class = "col-sm-3">Affiliation</dt>
        <dd class = "col-sm-9">@Model.ProfessionalAffiliation</dd>

        <dt class = "col-sm-3">Status</dt>
        <dd class = "col-sm-9">@Model.Status</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>
