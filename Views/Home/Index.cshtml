@model NeuronetAdmin.Models.ViewModels.DashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row mb-4">
    <div class="col-md-12">
        <h1 class="display-5 fw-bold text-white">Dashboard Overview</h1>
        <p class="lead text-light">Real-time system monitoring and activity logs.</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="card bg-dark text-white border-primary mb-3">
            <div class="card-header border-primary">Total Users</div>
            <div class="card-body">
                <h2 class="card-title display-4 text-center">@Model.TotalUsers</h2>
                <p class="card-text text-center text-muted">Registered Accounts</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-dark text-white border-warning mb-3">
            <div class="card-header border-warning text-warning">Pending Verifications</div>
            <div class="card-body">
                <h2 class="card-title display-4 text-center text-warning">@Model.PendingVerifications</h2>
                <p class="card-text text-center text-muted">Require Action</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card bg-dark text-white border-success mb-3">
            <div class="card-header border-success">Verified Counselors</div>
            <div class="card-body">
                <h2 class="card-title display-4 text-center text-success">@Model.VerifiedCounselors</h2>
                <p class="card-text text-center text-muted">Active Professionals</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card bg-dark text-white">
            <div class="card-header">
                System Audit Logs (Last 10 Actions)
            </div>
            <div class="card-body p-0">
                <table class="table table-dark table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Time (UTC)</th>
                            <th>Action</th>
                            <th>Admin</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.RecentActivity.Any())
                        {
                            @foreach (var log in Model.RecentActivity)
                            {
                                <tr>
                                    <td>@log.Timestamp.ToString("g")</td>
                                    <td>
                                        @if (log.Action.Contains("CREATED"))
                                        {
                                            <span class="badge bg-success">@log.Action</span>
                                        }
                                        else if (log.Action.Contains("DELETED") || log.Action.Contains("REJECTED"))
                                        {
                                            <span class="badge bg-danger">@log.Action</span>
                                        }
                                        else if (log.Action.Contains("UPDATED"))
                                        {
                                            <span class="badge bg-info text-dark">@log.Action</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@log.Action</span>
                                        }
                                    </td>
                                    <td>@log.PerformedBy</td>
                                    <td>@log.Details</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted">No recent activity found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
