@{
    ViewData["Title"] = "Welcome to NEURONET";
}

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <div class="glass-card animate__animated animate__fadeInLeft">
                    <h1 class="welcome-title">
                        Advanced <span style="background: var(--primary-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">Early Detection</span> & Support
                    </h1>
                    <p class="welcome-subtitle">
                        Empowering clinicians with AI-driven insights for mental health support. 
                        A secure, ethical, and collaborative platform for next-generation care.
                    </p>
                    <div class="d-flex flex-wrap gap-3 mt-4">
                        <a asp-controller="Verification" asp-action="Apply" class="btn-premium">
                            Apply as Counselor
                        </a>
                        <a asp-area="Identity" asp-page="/Account/Login" class="btn-outline-premium">
                            Admin Portal
                        </a>
                    </div>
                </div>
            </div>
            <div class="col-lg-5 d-none d-lg-block text-center animate__animated animate__fadeInRight">
                <div class="p-4" style="background: var(--primary-gradient); border-radius: 50%; width: 400px; height: 400px; display: inline-flex; align-items: center; justify-content: center; box-shadow: 0 0 80px rgba(168, 85, 247, 0.4);">
                     <i class="bi bi-cpu" style="font-size: 10rem; color: white;"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <div class="row g-4 text-center mt-5">
        <div class="col-md-4">
            <div class="card p-4 h-100 border-0 shadow-sm">
                <div class="mb-3 text-primary"><i class="bi bi-shield-lock-fill fs-1"></i></div>
                <h4>Secure & Ethical</h4>
                <p class="text-muted">HIPAA compliant architecture with encrypted data processing for maximum patient privacy.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 h-100 border-0 shadow-sm">
                <div class="mb-3 text-info"><i class="bi bi-lightning-charge-fill fs-1"></i></div>
                <h4>Real-time Insights</h4>
                <p class="text-muted">AI-powered analytics providing immediate support to clinical teams for early intervention.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card p-4 h-100 border-0 shadow-sm">
                <div class="mb-3 text-success"><i class="bi bi-people-fill fs-1"></i></div>
                <h4>Global Network</h4>
                <p class="text-muted">Connecting verified counselors in a collaborative environment to share insights and best practices.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}
